<style>
.div-custom {
    height: 100%;
  }
  
  .div-custom {
    display: -ms-flexbox;
    display: -webkit-box;
    display: flex;
    -ms-flex-align: center;
    -ms-flex-pack: center;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    padding-top: 40px;
    padding-bottom: 40px;
    background-color: #f5f5f5;
  }
  .form-signup {
      width: 100%;
      max-width: 330px;
      padding: 15px;
      margin: 0 auto;
    }
</style>
<div class="custom mt-4">
<form class="form-signup" action="/user/create"method="POST">
    <h1 class="h3 mb-3 font-weight-normal text-center">Create an Account</h1>
    <% if(flash && flash.formErrors) { %>
		<ul class="alert alert-success">
	<% Object.keys(flash.formErrors).forEach(function(error) { %>
		<li><%- JSON.stringify(flash.formErrors[error],["message"]) %></li>
	<% }) %>
	</ul>
	<% } %>
    <div class="control-group mb-4"> 
      <label for="input" class="sr-only">User Name</label>
      <input type="text" id="inputUsername" class="form-control" placeholder="Username" autofocus name="username"value="<% if(old) { %><%= old.username %><%} %>">
    </div>
    <div class="control-group mb-4">
      <label for="input" class="sr-only">Email</label>
      <input type="text" id="inputEmail" class="form-control" placeholder="Email" name="email"value="<% if(old) { %><%= old.email %><%} %>">
    </div>
    <div class="control-group mb-4">
      <label for="password" class="sr-only">Password</label>
      <input type="password" class="form-control" placeholder="Password" name="password" id="password">
    </div>
    <div class="control-group mb-2">
      <label for="password" class="sr-only">Confirm Password</label>
      <input type="password" id="confirmPassword" class="form-control" placeholder="Confirm Password" name="confirmation">
    </div>
    <div class="form-check mb-2">
        <input type="checkbox" class="form-check-input" id="isAShelter" name="isShelter">
        <label class="form-check-label" for="isShelter">I'm from a Shelter</label>
      </div>
    <input type="hidden" name="_csrf" value="<%= _csrf %>" />
    <button class="btn btn-lg btn-primary btn-block" type="submit">Create Account</button>
  </form>
</div>