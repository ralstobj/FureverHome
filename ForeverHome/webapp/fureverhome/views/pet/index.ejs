<div class="container-fluid">
    <div class="row">
      <nav class="col-md-2 d-none d-md-block bg-light sidebar">
        <div class="sidebar-sticky">
          <ul class="nav flex-column">
              <button type="button" data-filter="all">All</button>
              <button type="button" data-filter=".Dog">Dog</button>
              <button type="button" data-filter=".Cat">Cat</button>
          </ul>
        </div>
      </nav>
      <div class="container row mt-4">
        <% _.each(pets, function(pet) { %>
            <!-- <div class="col-sm-3"> -->
              <div class="mix <%= pet.typeOfPet %>">
                <div class="card"  style="width: 23rem;">
                    <!--Card image-->
                    <img class="img-fluid" src="<%= pet.linkToImage %>" alt="<%= pet.name %> Image"></img>
                    <!--Card content-->
                    <div class="card-body">
                        <!--Title-->
                        <h4 class="card-title"><%= pet.name %></h4>
                        <!--Text-->
                        <p class="card-text"><%= pet.summary %></p>
                        <!--Button-->
                        <a href="/pet/show/<%= pet.id %>" class="btn btn-primary float-right">View</a>
                        <% if(session.authenticated){ %>
                            <% if(session.User != undefined){ %>
                                <% if(session.Shelter == undefined){ %>
                                    <% var isFavorite; %>
                                    <% _.each(favorites, function(favorite) { %>
                                        <% if(pet.id == favorite.petId) {%>
                                            <% isFavorite = favorite %>
                                        <% } %>
                                    <% }) %>
                                    <% if(isFavorite == undefined) { %>
                                        <form class="form" action="/favorites/createFavorite" method="POST">
                                            <input type="hidden" name="petId" type="number" value="<%= pet.id %>" />
                                            <input type="hidden" name="userId" type="number" value="<%= session.User.id%>" />
                                            <input type="hidden" name="path" type="text" value="/pet" />
                                            <button class="btn btn-primary" type="submit">Favorite</button>
                                        </form>
                                    <% } else{ %>
                                        <form class="form" action="/favorites/destroy/<%= isFavorite.id %>" method="POST">
                                            <input type="hidden" name="path" type="text" value="/pet" />
                                            <button class="btn btn-primary" type="submit">Unfavorite</button>
                                        </form>
                                    <% } %>
                                <% } %>
                            <% } %>  
                        <% } %>       
                    </div>
                </div>
              </div>
            <!-- </div> -->
        <% }) %>
            </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/mixitup/3.3.0/mixitup.min.js"></script>
<script>
    var containerEl = document.querySelector('.container');

    var mixer = mixitup(containerEl);
</script>